#expanded-menu.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-right
        - if !user_signed_in?
            %li
                = link_to 'Entrar', signin_path
        - else 
            %li.dropdown
            %a.dropdown-toggle{ :href=>"#", :data-toggle=>"dropdown", :role=>"button", :aria-haspopup=>"true", :aria-expanded=>"false"}
                bem vindo, 
                = current_user.name  
                %span.caret

            %ul.dropdown-menu
                %li
                = link_to 'Minha Pagina', user_path(current_user)
                %li
                = link_to 'Editar', edit_user_path(current_user)
                %li.divider{:role=>"separator"}
                %li
                = link_to 'Sair', signout_path, method: :delete